generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url  	= env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model course {
  code      String      @id
  title     String
  credits   Int
  result    result[]
  result_pg result_pg[]
}

model result {
  rollno       String
  code         String
  grade        Int
  grade_letter String
  semester     Int
  gp           Int
  course       course       @relation(fields: [code], references: [code])
  sem_summary  sem_summary? @relation(fields: [rollno, semester], references: [rollno, semester])

  @@id([rollno, code, semester])
}

model result_pg {
  rollno       String
  code         String
  grade        Int
  grade_letter String
  semester     Int
  gp           Int
  course       course       @relation(fields: [code], references: [code])
  sem_summary  sem_summary? @relation(fields: [rollno, semester], references: [rollno, semester])

  @@id([rollno, code, semester])
}

model student {
  rollno       String        @id
  name         String
  fathers_name String
  batch        String
  branch_code  String?
  branch       branch?       @relation(fields: [branch_code], references: [code])
  rank         rank?
  sem_summary  sem_summary[]
  summary      summary?
}

model sem_summary {
  rollno     String
  semester   Int
  sgpi       String
  cgpi       String
  sgpi_total Int
  cgpi_total Int
  student    student?    @relation(fields: [rollno], references: [rollno])
  result     result[]
  result_pg  result_pg[]

  @@id([rollno, semester])
}

model summary {
  rollno     String   @id
  semester   Int
  sgpi       String
  cgpi       String
  sgpi_total Int
  cgpi_total Int
  student    student? @relation(fields: [rollno], references: [rollno])
}

model rank {
  rollno            String   @id
  class_rank_sgpi   Int      @default(0)
  class_rank_cgpi   Int      @default(0)
  year_rank_sgpi    Int      @default(0)
  year_rank_cgpi    Int      @default(0)
  college_rank_sgpi Int      @default(0)
  college_rank_cgpi Int      @default(0)
  student           student? @relation(fields: [rollno], references: [rollno])
}

model branch {
  code    String    @id
  name    String
  student student[]
}
