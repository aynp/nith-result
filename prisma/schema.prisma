//   directUrl = env("DIRECT_URL")
// }
datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model course {
  course_code      String      @id
  course_title     String
  course_credits   Int
  result    result[]
  result_pg result_pg[]

  @@index([course_code])
}

model result {
  id             String       @id @default(uuid())
  rollno         String
  course_code    String
  grade          Int
  grade_letter   String
  semester       Int
  gp             Int
  course         course       @relation(fields: [course_code], references: [course_code])
  sem_summary_id String?
  sem_summary    sem_summary? @relation(fields: [sem_summary_id], references: [id])

  @@index([sem_summary_id])
}

model result_pg {
  id             String       @id @default(uuid())
  rollno         String
  course_code    String
  grade          Int
  grade_letter   String
  semester       Int
  gp             Int
  course         course       @relation(fields: [course_code], references: [course_code])
  sem_summary_id String?
  sem_summary    sem_summary? @relation(fields: [sem_summary_id], references: [id])

  @@index([sem_summary_id])
}

model student {
  rollno       String        @id
  name         String
  fathers_name String
  batch        String
  branch_code  String?
  branch       branch?       @relation(fields: [branch_code], references: [branch_code])
  rank         rank?
  sem_summary  sem_summary[]
  summary      summary?

  @@index([rollno])
  @@index([branch_code])
}

model sem_summary {
  id         String      @id @default(uuid())
  rollno     String
  semester   Int
  sgpi       String
  cgpi       String
  sgpi_total Int
  cgpi_total Int
  student    student?    @relation(fields: [rollno], references: [rollno])
  result     result[]
  result_pg  result_pg[]

  @@index([rollno])
}

model summary {
  rollno     String   @id
  semester   Int
  sgpi       String
  cgpi       String
  sgpi_total Int
  cgpi_total Int
  student    student? @relation(fields: [rollno], references: [rollno])

  @@index([rollno])
}

model rank {
  rollno            String   @id
  class_rank_sgpi   Int      @default(0)
  class_rank_cgpi   Int      @default(0)
  year_rank_sgpi    Int      @default(0)
  year_rank_cgpi    Int      @default(0)
  college_rank_sgpi Int      @default(0)
  college_rank_cgpi Int      @default(0)
  student           student? @relation(fields: [rollno], references: [rollno])

  @@index([rollno])
}

model branch {
  branch_code String    @id
  branch_name String
  students    student[]

  @@index([branch_code])
}
